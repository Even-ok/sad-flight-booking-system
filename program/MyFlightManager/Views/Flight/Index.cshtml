
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head runat="server">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script src="~/Scripts/vue.js"></script>
    <script src="~/Scripts/ElementUI/element-ui.js"></script>
    <link href="~/Content/ElementUI/element-ui.css" rel="stylesheet" />
    <script src="~/Scripts/axios.min.js"></script>
    @Styles.Render("~/css/Home.css")

</head>
<style type="text/css">
    #homemain {
        position: fixed;
        overflow: auto;
        overflow-x: hidden;
        top: 0;
        left: 0;
        background-image: url("../img/IndexBackgroundimage.jpg");
        background-size: cover;
        z-index: -10;
        background-position: center 0;
        width: 100%;
        height: 100%;
    }

    #home__data {
        margin: 0px 200px;
        height: auto;
        width: 100%;
    }

    .el-button {
        width: 150px;
        background: #4862b9;
        color: #fff;
        border: none;
        font-size: 18px;
        font-family: Microsoft YaHei;
        animation: fadeInAnimation ease 3s;
        animation-iteration-count: 1;
        animation-fill-mode: forwards;
    }
</style>
<body style="padding-top: 0px; padding-bottom: 0px;">
    @RenderPage("~/Views/Flight/HeadBar.cshtml")
    <div id="homemain">
        <div id="home__data">

            <h1>Start Your <br>  <b>Flight <br> Journey</b></h1>
            <el-button type="primary" size="mini" icon="el-icon-search" onclick="window.location.href='/Flight/displayFlight'">开 始 搜 索</el-button>
        </div>

    </div>
</body>
</html>


<script>
    new Vue({
        el: '#homemain'
    })
</script>


