@{
    Layout = null;
    ViewBag.Title = "Schedule";
}


<head runat="server">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <script src="~/Scripts/vue.js"></script>
    <script src="~/Scripts/vue-resource.js"></script>
    <script src="~/Scripts/ElementUI/element-ui.js"></script>
    <script src="~/Scripts/axios.min.js"></script>
    <link href="~/Content/ElementUI/element-ui.css" rel="stylesheet" />
    @Styles.Render("~/css/schedule.css")
    <link rel="stylesheet" type="text/css" href="http://www.jq22.com/jquery/font-awesome.4.6.0.css">
</head>

<body background="~/img/backgroundimage.jpg" style=" background-repeat:no-repeat ;background-size:cover;background-attachment: fixed;">
    <div>
        @RenderPage("~/Views/Flight/HeadBar.cshtml")
    </div>

    <div id="bk">
        <div class="grid-container">
            <div class="item2">
                <div id="subtitle">
                    我的行程
                </div>
                <el-divider></el-divider>
                <div id="menubody">
                    <el-menu router :default-active="activeIndex" class="el-menu-vertical-demo" v-open="handleOpen" v-close="handleClose">
                        <el-submenu index="1">
                            <template slot="title">
                                我的订单
                            </template>
                            <el-menu-item v-on:click="changePage()">机票订单</el-menu-item>
                            <el-menu-item>我的行程</el-menu-item>
                        </el-submenu>
                    </el-menu>
                </div>
            </div>
            <div class="item3">
                <div id="myxc1">
                    <div class="timeblock">
                        <span class="demonstration">行程日期</span>
                        <el-date-picker v-model="value6"
                                        type="daterange"
                                        range-separator="至"
                                        start-placeholder="开始日期"
                                        end-placeholder="结束日期">
                        </el-date-picker>
                        <span style="margin-left: 100px;">
                            <el-button fill="skyblue" type="primary" plain v-on:click="scheduleQuery" style="background:#4862b9;color:#fff;border:none;">查询行程</el-button>
                        </span>
                    </div>
                    <div>
                        <el-table ref="filterTable"
                                  :data="tableData"
                                  id="table"
                                  max-height="480"
                                  :header-cell-style="{background:'#4862b9',
                                color:'#fff',
                                    border: 'solid 1px white'
                                    }"
                                  style="width: 90%; margin-top:50px; margin-left:70px;">
                            <el-table-column prop="departDate"
                                             label="出发时间"
                                             width="170">
                            </el-table-column>
                            <el-table-column prop="arriveDate"
                                             label="到达时间"
                                             width="170">
                            </el-table-column>
                            <el-table-column prop="departCity"
                                             label="出发城市"
                                             width="130">
                            </el-table-column>
                            <el-table-column prop="arriveCity"
                                             label="到达城市"
                                             width="130">
                            </el-table-column>
                            <el-table-column prop="state"
                                             label="机票状态"
                                             width="140"
                                             :filters="[{ text: '改签', value: '改签' }, { text: '未出行', value: '未出行' }, { text: '退订', value: '退订' }]"
                                             :filter-method="filterTag"
                                             :filter-multiple="false">
                                <template slot-scope="scope">
                                    <el-tag disable-transitions>{{scope.row.state}}</el-tag>
                                </template>
                            </el-table-column>
                        </el-table>
                    </div>
                </div>
            </div>
        </div>
        <script>
 
        </script>
    </div>
</body>
<script src="~/js/schedule.js"></script>







